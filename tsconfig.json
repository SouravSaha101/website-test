{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "sourceRoot": "src",
    "baseUrl": "src",
    "allowJs": true,
	"typeRoots": [ "node_modules/@types" ],
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "static",
    "test"
  ]
}
